<% form_for @meal, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <b>Nazwa</b><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <b>Opis</b><br />
    <%= f.text_area :desc %>
  </p>
  <p>
    <b>Składniki</b><br />
    <%= f.text_field :elements %>
  </p>
  
    <table cellpadding="0" cellspacing="0" style="margin: 0px;">
      <tr>
        <td><b>Ilość</b><br />
          <%= f.text_field :amount %>
        </td>
        <td>
          <b>Jednostka</b><br />
          <%= select("meal", "unit", %w[kg dkg l ml szt], {}) %>
        </td>
      </tr>
    </table>
  
  <p>
    <b>Fotografia</b><br/>
    <%= f.file_field :meal_photo %>
  </p>

  <p>
    <%= f.submit button_name %>
  </p>
<% end %>