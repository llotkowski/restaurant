<h1>Dodaj użytkownika</h1>
<br />
<% form_for(@user) do |f| %>
<center>
  <%= error_messages_for 'user', :message => 'Wystąpiły następujące problemy podczas próby zapisu:', :header_message => 'Operacja nie powiodła się' %>
</center>
  <p>
    <div>Login</div><br />
    <%= f.text_field :login %>
  </p>
  <p>
    <div>Hasło</div><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <div>Imię</div><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <div>Nazwisko</div><br />
    <%= f.text_field :surname %>
  </p>
  <p>
    <div>E-mail</div><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <div>Administrator</div><br />
    <%= select( "user", "isadmin", { "Nie" => "false", "Tak" => "true"}) %>
  </p>
<p>
  <br/>
  <%= f.submit "Utwórz" %>
</p>
<% end %>
<br/>
<%= link_to 'Wróć', users_path %>
