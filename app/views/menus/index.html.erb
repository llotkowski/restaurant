<h1>Listing menus</h1>

<table>
  <tr>
    <th>Restaurant</th>
    <th>Meal</th>
    <th>Category</th>
    <th>Price</th>
    <th>Duration</th>
  </tr>

<% for menu in @menus %>
  <tr>
    <td><%=h menu.restaurant.name %></td>
    <td><%=h menu.meal.name %></td>
    <td><%=h menu.category.name %></td>
    <td><%=h menu.price %></td>
    <td><%=h menu.duration %></td>
    <td><%= link_to 'Show', menu %></td>
    <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
    <td><%= link_to 'Destroy', menu, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New menu', new_menu_path %>
