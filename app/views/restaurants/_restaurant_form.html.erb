<% form_for @restaurant, :html => { :multipart => true } do |f| %>
  <center>
    <%= error_messages_for 'restaurant', :message => 'Wystąpiły następujące problemy podczas próby zapisu:', :header_message => 'Operacja nie powiodła się' %>
  </center>
<table>
  <tr>
    <td>Nazwa</td>
  </tr>
  <tr>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
     <td>Opis</td>
  </tr>
  <tr>
    <td><%= f.text_area :desc %></td>
  </tr>
  <tr>
    <td>Kuchnia</td>
  </tr>
  <tr>
    <td><%= select("restaurant", "cuisine_id", Cuisine.find(:all).collect { |c| [c.name, c.id] }, {}) %></td>
  </tr>
  <tr>
     <td>Właściciel</td>
  </tr>
  <tr>
    <td><%= f.text_field :owner %></td>
  </tr>
  <tr>
    <td>Telefon</td>
  </tr>
  <tr>
    <td><%= f.text_field :phone %></td>
  </tr>
  <tr>
     <td>E-mail</td>
  </tr>
  <tr>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr>
     <td>Ulica</td>
  </tr>
  <tr>
    <td><%= f.text_field :street %></td>
  </tr>
  <tr>
     <td>Numer</td>
  </tr>
  <tr>
    <td><%= f.text_field :number %></td>
  </tr>
  <tr>
     <td>Miejscowość</td>
  </tr>
  <tr>
    <td><%= f.text_field :city %></td>
  </tr>
  <tr>
     <td>Fotografia</td>
  </tr>
  <tr>
    <td><%= f.file_field :photo %></td>
  </tr>
</table>
  <p>
    <br/>
    <%= f.submit button_name %>
  </p>
<% end %>
