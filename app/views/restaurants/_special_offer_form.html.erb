<div id="specials">
  <div class="header_small_menu" style="border-right: 1px solid white;">Specjalność zakładu</div>

  <%  if(@special_menu.size == 0)%>
    <div style="font-size: 12px; padding: 10px 10px;">Brak dań</div>
  <% end %>

  <% for menu in @special_menu %>
    <div class="imagebox">
      <div style="float: left; width: 90px; margin-right: 10px;">
        <%= link_to image_tag(menu.meal.meal_photo.url(:thumb), :size => "89x67", :class => "image_border_menu"), {:controller => "restaurants", :action => "show_meal", :id => @restaurant.id, :menu_id => menu.id}, :class => "meal_name_biger" %>
      </div>
      <div>
        <h2><%= link_to menu.meal.name, {:controller => "restaurants", :action => "show_meal", :id => @restaurant.id, :menu_id => menu.id}, :class => "meal_name" %></h2>
        <p>
          <%= menu.meal.desc[0 .. 40] %>
          <% if menu.meal.desc.size > 40 %>
            ...
          <% end %>
        </p>
        <p class="readmore"><%= link_to '... więcej', {:controller => "restaurants", :action => "show_meal", :id => @restaurant.id, :menu_id => menu.id}, :class => "no_underline" %></p>
      </div>
    </div>

  <% end %>

</div><!-- end specials -->