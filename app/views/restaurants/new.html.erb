<h1>New restaurant</h1>

<% form_for(@restaurant) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :desc %><br />
    <%= f.text_area :desc %>
  </p>
  <p>
    Ulica<br />
    <%= f.text_field :street %>
  </p>
  <p>
    Numer<br />
    <%= f.text_field :number %>
  </p>
  <p>
    Miejscowość<br />
    <%= f.text_field :city %>
  </p>
  <p>
    Wysokość geograficzna<br />
    <%= f.text_field :longitude %>
  </p>
  <p>
    Szerokość geograficzna<br />
    <%= f.text_field :latitude %>
  </p>
  <p>
    powiększenie<br />
    <%= f.text_field :zoom %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', restaurants_path %>
