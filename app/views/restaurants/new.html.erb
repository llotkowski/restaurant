<h1>Dodaj restaurację</h1>

<% form_for @restaurant, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    Nazwa<br />
    <%= f.text_field :name %>
  </p>
  <p>
    Opis<br />
    <%= f.text_area :desc %>
  </p>
  <p>
    Ulica<br />
    <%= f.text_field :street %>
  </p>
  <p>
    Numer<br />
    <%= f.text_field :number %>
  </p>
  <p>
    Miejscowość<br />
    <%= f.text_field :city %>
  </p>
  <p>
    Fotografia<br/>
    <%= f.file_field :photo %>
  </p>
  <p>
    <%= f.submit "Dodaj" %>
  </p>
<% end %>

<%= link_to 'Wróć', restaurants_path %>
