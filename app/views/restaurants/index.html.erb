<h1>Lista restauracji</h1>
<br/ >
  <table>
  <% for restaurant in @restaurants %>
    <tr>
      <td width="110"><%= image_tag restaurant.photo.url(:thumb), :style => 'float : left; margin-right : 10px;' %> </td>
      <td><b><%=h restaurant.name %></b><br />
        <%=h restaurant.address %><br />
        Telefon: <%=h restaurant.phone %><br/>
        Kuchnia: <%=h restaurant.cuisine.name %><br/>
        <%= link_to image_tag("../images/signs/show.png", :class => "icon"), restaurant_path(restaurant) %>
        <%= link_to image_tag("../images/signs/www.png", :class => "icon"), {:controller => "restaurants", :action => "home", :id => restaurant.id} %>
        <%= link_to image_tag("../images/signs/edit.png", :class => "icon"), edit_restaurant_path(restaurant) %>
        <%= link_to image_tag("../images/signs/delete.png", :class => "icon"), restaurant, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

