<script type="text/javascript">
$(document).ready(function(){
  $(".block").draggable({containment:document.getElementById('container'), cursor : 'pointer'});
})
var counter = 0;
function add_place_4(){
  var container = document.getElementById('container');
  var html = container.innerHTML;
  container.innerHTML = html + "<div id=\"new"+counter+"\" class=\"block\" style=\"position : absolute; top :100px; left : 100px; cursor : pointer\" ><img src=\"../../images/4_place.png\" /></div>";
  $(".block").draggable({containment:document.getElementById('container'), cursor : 'pointer'});
  $(document.getElementById('new'+counter)).effect("bounce", { times: 3 }, 300);
  counter++;
}

function add_place_2(){
  var container = document.getElementById('container');
  var html = container.innerHTML;
  container.innerHTML = html + "<div id=\"new"+counter+"\" class=\"block\" style=\"position : absolute; top :100px; left : 100px; cursor : pointer\" ><img src=\"../../images/2_place.png\" /></div>";
  $(".block").draggable({containment:document.getElementById('container'), cursor : 'pointer'});
  $(document.getElementById('new'+counter)).effect("bounce", { times: 3 }, 300);
  counter++;
}
</script>


