<div id="specials" >
  <div class="header_menu" style="margin-left: -2px;">Menu</div>

  <ul>
    <% for category in @category_list %>

      <li><%= link_to Category.find(category.category_id).name, {:controller => "restaurants", :action => "menu", :id => @restaurant.id, :category => category.category_id} %></li>

    <% end %>
  </ul>


  <%= link_to 'Dodaj pozycjÄ™ menu', {:controller => "restaurants", :action => "add_menu_to_restaurant", :id => @restaurant.id} %>

</div><!-- end specials -->

<div id="menu_body">
  <div class="header_menu">
    <% if !params[:category].nil? %>
      <%= Category.find(params[:category]).name %>
    <% else %>
      Dania
    <% end %>
  </div>

  <div class="body_menu">
    <% unless !@restaurant_menu %>
      <% for menu in @restaurant_menu %>
    
        <div>
          Danie: <%=h menu.meal.name %><br/>
          Rodzaj: <%=h menu.category.name %><br/>
        </div>

      <% end %>
    <% end %>

  </div>
</div>
